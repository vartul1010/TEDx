<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.tedxdtu.RegistrationFormActivity">

    <include layout="@layout/title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#f4f4f4"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="QUESTIONNAIRE"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:lineSpacingExtra="5dp"
                android:text="All fields must be filled. You can fill this only once."
                android:textColor="#708090"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:lineSpacingExtra="5dp"
                android:text="Why do you want to attend TEDxDTU 2018?"
                android:textColor="#000000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/answerOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/rounded_corner_white"
                android:enabled="true"
                android:focusable="true"
                android:gravity="top"
                android:hint="Type your answer here"
                android:inputType="textMultiLine"
                android:isScrollContainer="true"
                android:lineSpacingExtra="5dp"
                android:lines="3"
                android:paddingLeft="20dp"
                android:textColor="#000000"
                android:textColorHint="#708090"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/errorAnswerOne"
                android:textColor="#E02839"
                android:layout_marginBottom="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This answer can't be empty"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:lineSpacingExtra="5dp"
                android:text="How did you come to know about TEDxDTU 2018?"
                android:textColor="#000000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/answerTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/rounded_corner_white"
                android:enabled="true"
                android:focusable="true"
                android:gravity="top"
                android:hint="Type your answer here"
                android:inputType="textMultiLine"
                android:isScrollContainer="true"
                android:lineSpacingExtra="5dp"
                android:lines="3"
                android:paddingLeft="20dp"
                android:textColor="#000000"
                android:textColorHint="#708090"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/errorAnswerTwo"
                android:textColor="#E02839"
                android:layout_marginBottom="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This answer can't be empty"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:lineSpacingExtra="5dp"
                android:text="According to you, what ideas are worth spreading and why?"
                android:textColor="#000000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/answerThree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/rounded_corner_white"
                android:enabled="true"
                android:focusable="true"
                android:gravity="top"
                android:hint="Type your answer here"
                android:inputType="textMultiLine"
                android:isScrollContainer="true"
                android:lineSpacingExtra="5dp"
                android:lines="3"
                android:paddingLeft="20dp"
                android:textColor="#000000"
                android:textColorHint="#708090"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/errorAnswerThree"
                android:textColor="#E02839"
                android:layout_marginBottom="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This answer can't be empty"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:lineSpacingExtra="5dp"
                android:text="Mobile Number"
                android:textColor="#000000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/answerFour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/rounded_corner_white"
                android:enabled="true"
                android:focusable="true"
                android:gravity="top"
                android:hint="Type your Mobile Number here"
                android:inputType="textMultiLine"
                android:isScrollContainer="true"
                android:lineSpacingExtra="5dp"
                android:lines="3"
                android:paddingLeft="20dp"
                android:textColor="#000000"
                android:textColorHint="#708090"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/errorAnswerFour"
                android:textColor="#E02839"
                android:layout_marginBottom="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This answer can't be empty"/>

            <TextView
                android:id="@+id/applyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="50dp"
                android:background="@drawable/button"
                android:elevation="15dp"
                android:paddingBottom="12dp"
                android:paddingLeft="70dp"
                android:paddingRight="70dp"
                android:paddingTop="12dp"
                android:text="Apply"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
