<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.android.tedxdtu.LoginFragment"
    android:layout_width="match_parent"
    android:background="#f4f4f4"
    android:layout_height="match_parent">

<LinearLayout
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="35dp">

    <EditText
        android:id="@+id/email_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rounded_corner_white"
        android:hint="E-Mail"
        android:maxLines="1"
        android:nextFocusDown="@id/password_login"
        android:inputType="textEmailAddress"
        android:padding="15dp"
        android:textColor="#000000"
        android:textColorHint="#708090" />

    <EditText
        android:id="@+id/password_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:maxLines="1"
        android:background="@drawable/rounded_corner_white"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="15dp"
        android:textColor="#000000"
        android:textColorHint="#708090" />

    <TextView
        android:id="@+id/error_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginBottom="10dp"
        android:text="OOPS! email and password do not match"
        android:textColor="#e02839" />

    <TextView
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_two"
        android:gravity="center"
        android:padding="15dp"
        android:text="Login"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:text="OR"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/login_using_google_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/google_login"
        android:gravity="center"
        android:padding="15dp"
        android:text="Login using Google"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>
</ScrollView>
