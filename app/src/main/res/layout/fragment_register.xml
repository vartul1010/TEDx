<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:padding="35dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/username_register"
            android:maxLines="1"
            android:nextFocusDown="@id/first_name_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rounded_corner_white"
            android:hint="Username"
            android:padding="15dp"
            android:textColor="#000000"
            android:textColorHint="#708090" />

        <EditText
            android:id="@+id/first_name_register"
            android:maxLines="1"
            android:nextFocusDown="@id/last_name_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rounded_corner_white"
            android:hint="First Name"
            android:inputType="textPersonName"
            android:padding="15dp"
            android:textColor="#000000"
            android:textColorHint="#708090" />

        <EditText
            android:id="@+id/last_name_register"
            android:maxLines="1"
            android:nextFocusDown="@id/email_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rounded_corner_white"
            android:hint="Last Name"
            android:inputType="textPersonName"
            android:padding="15dp"
            android:textColor="#000000"
            android:textColorHint="#708090" />

        <EditText
            android:id="@+id/email_register"
            android:maxLines="1"
            android:nextFocusDown="@id/mobile_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rounded_corner_white"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:padding="15dp"
            android:textColor="#000000"
            android:textColorHint="#708090" />

        <EditText
            android:id="@+id/mobile_register"
            android:maxLines="1"
            android:nextFocusDown="@id/password_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rounded_corner_white"
            android:hint="Mobile Number"
            android:inputType="phone"
            android:padding="15dp"
            android:textColor="#000000"
            android:textColorHint="#708090" />

        <EditText
            android:id="@+id/password_register"
            android:maxLines="1"
            android:nextFocusDown="@id/confirm_password_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rounded_corner_white"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="15dp"
            android:textColor="#000000"
            android:textColorHint="#708090" />

        <EditText
            android:id="@+id/confirm_password_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rounded_corner_white"
            android:hint="Re-enter Password"
            android:inputType="textPassword"
            android:padding="15dp"
            android:textColor="#000000"
            android:textColorHint="#708090" />

        <TextView
            android:id="@+id/register_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_two"
            android:gravity="center"
            android:padding="15dp"
            android:text="Register"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
